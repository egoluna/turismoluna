<div class="container ">
    <div class="row justify-content-center" style="margin:150px 0">
        <div class="col-6 w-25 text-center justify-content-center">
            <form action="/admin/login" method="post">
                <div class="form-group mb-3">
                    <label class="form-label">Nombre de Usuario:</label>
                    <input type="text" class="form-control rounded-pill" placeholder="Usuario" name="usuario">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Contraseña:</label>
                    <input type="password" class="form-control rounded-pill" placeholder="Password" name="password">
                </div>
                <button type="submit" class="bth bth-primary rounded-pill"> Ingresar </button>
            </form>
            {{#if error}}
            <p class="text-danger">Usuario o contraseña incorrecta </p>
            {{/if}}
        </div>
    </div>
</div>