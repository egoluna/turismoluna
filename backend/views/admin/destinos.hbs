<div class="container" style="margin-top:50px;">
	{{!--ENCABEZADO--}}
	<div class="container mb-4">
		<div class="row">
			<p class="text-end text-uppercase text-info fs-3"> {{usuario}} </p>
		</div>
		<div class="row  d-flex justify-content-between">
			<div class="col-6">
				<a class="btn btn-secondary rounded-pill" href="/admin/panel">
				<i class="fa-solid fa-angles-left"></i> Volver al PANEL </a>
			</div>
			<div class="col-6 text-end" >
				<a class="btn btn-danger rounded-pill" href="/admin/login/logout">
				Cerrar sesi√≥n  <i class="fas fa-sign-out-alt"></i></a>
			</div>
		</div>
	</div>	
	<hr/>
	{{!--listad --}}
	<div class="row mb-4">
		<div class="col-7">
			<h3>Destinos</h3>
		</div>
		<div class="col-5 text-end">
			<a class="btn btn-success  rounded-pill" href="/admin/destinos/agregarDestino"><i class="fa fa-plus">
				</i>Agregar Destino</a>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<table class="table">
				<thead class="thead-dark">
					<tr>
						<th scope="col" class="text-start" style="width: 30%;">Titulo</th>
						<th scope="col" class="text-start" style="width: 50%;">Subtitulo</th>
						<th scope="col" class="text-center" style="width: 10%;">Imagen</th>
						<th scope="col" class="text-end" style="width: 10%;">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{{#each destinos}}
					<tr>
						<th scope="col">{{titulo}}</th>
						<td> {{subtitulo}}</td>
						<td class="text-center"> {{{imagen}}}</td>
						<td class="text-end">
							<a href="/admin/destinos/modificarDestino/{{id}}"
								class="btn btn-sm btn-secondary">{{!--Modificar --}}
								<i class="fa fa-pencil"></i></a>
							<a href="/admin/destinos/eliminarDestino/{{id}}"
								class="btn btn-sm btn-secondary">{{!--Eliminar --}}
								<i class="fa fa-trash"></i></a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>